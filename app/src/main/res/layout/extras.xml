<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFEFEF"
    >
    
 <TextView
       style="@style/TitleBar"
       android:text="@string/extras"
       android:id="@+id/tv" />
   
     
  <ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> 
    >
   <RelativeLayout 
   				   android:layout_width="fill_parent"
    			   android:layout_height="fill_parent"
    			   android:background="#FFEFEFEF"
    			   android:id="@+id/relative1"  
    			   android:layout_gravity="center_vertical"
    			   android:gravity="center" >
    
 
       <Button
            android:id="@+id/licence_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonselect"
            android:layout_marginTop="30dp"
            android:focusable="true"
            android:gravity="center"
            android:src="#FF0D72A6"
            android:text="Licence Details "
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/road_tax_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/licence_details"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="Road Tax Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/insurance_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/road_tax_details"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="Insurance Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

       <!--  <Button
            android:id="@+id/delete_bike_extras"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/insurance_details"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#FF0D72A6"
            android:gravity="center"
            android:text="@string/deleteextras"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" /> -->
</RelativeLayout>
</ScrollView>
</RelativeLayout>