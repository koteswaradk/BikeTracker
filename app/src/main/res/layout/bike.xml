<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
       style="@style/TitleBar"
       android:text="@string/AddBike"
       android:id="@+id/tv" />

    <ScrollView 
         android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
       
        android:id="@+id/relative1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFEFEFEF"
        android:gravity="center" >

        <Button
            android:id="@+id/new_bike_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
           
            android:layout_marginTop="30dp"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/buttonselect"
            android:text="@string/addnewbikeinfo"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_bike_purchasedetail"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/new_bike_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="@string/addpurchasesdetails"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_bike_salesdetails"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/add_bike_purchasedetail"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="@string/addsalesdetails"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/view_bike_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/add_bike_salesdetails"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="@string/viewdetails"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/update_bike_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/add_bike_salesdetails"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="100dp"
           android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="Update Your Bike Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_bike_details"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/add_bike_salesdetails"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/buttonselect"
            android:gravity="center"
            android:text="Delete Your Bike Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>
  
</LinearLayout>