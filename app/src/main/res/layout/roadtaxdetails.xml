<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFEFEF"
    >
    
 <TextView
       style="@style/TitleBar"
       android:text="Yoour Road Tax Details"
       android:id="@+id/tv" />
   
     
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> 
    
>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   				   android:layout_width="fill_parent"
    			   android:layout_height="fill_parent"
    			   android:background="#FFEFEFEF"
    			   android:id="@+id/relative1"  
    			   android:layout_gravity="center_vertical"
    			   android:gravity="center" >
    
 
       <Button
            android:id="@+id/add_roadtax"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#FF0D72A6"
            android:layout_marginTop="30dp"
            android:focusable="true"
            android:gravity="center"
            android:src="#FF0D72A6"
            android:text="Add Road Tax Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/view_roadtax"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/add_roadtax"
            android:layout_marginTop="20dp"
            android:background="#FF0D72A6"
            android:gravity="center"
            android:text="View Road Tax Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/update_roadtax"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/view_roadtax"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="#FF0D72A6"
            android:gravity="center"
            android:text="Update Road Tax Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_roadtax"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/update_roadtax"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#FF0D72A6"
            android:gravity="center"
            android:text="Delete Road Tax Details"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />
</RelativeLayout>
</ScrollView>
</RelativeLayout>